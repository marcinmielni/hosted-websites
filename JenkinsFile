pipeline {

    agent any

    stages {

        stage("build") {
            steps {
                sh "hugo -s marcin.mielnicz.uk"
            }
        }
        stage("test") {
            steps {
               echo "dummy testing XD"
            }
        }
        stage("deploy") {
            steps {
                sh "sudo rsync -uvrP --delete-after marcin.mielnicz.uk/public /var/www/html/marcin.mielnicz.uk"
            }
        }
    }
}
